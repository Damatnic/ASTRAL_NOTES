  ],
  "shortcuts": [
    {
      "name": "New Project",
      "short_name": "New Project",
      "description": "Create a new writing project",
      "url": "/projects/new",
      "icons": [
        {
          "src": "icon-192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Go to dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "icon-192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Search",
      "short_name": "Search",
      "description": "Search your content",
      "url": "/search",
      "icons": [
        {
          "src": "icon-192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": [
            "text/plain",
            "text/markdown",
            "application/json",
            ".md",
            ".txt"
          ]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+astral",
      "url": "/import?url=%s"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "display_override": ["window-controls-overlay", "standalone"],
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "text/markdown": [".md"],
        "text/plain": [".txt"],
        "application/json": [".json"],
        "text/x-fountain": [".fountain"],
        "application/x-scrivener": [".scriv"]
      }
    }
  ],
  "capture_links": "new-client",
  "background_sync": [
    {
      "tag": "project-sync",
      "icons": [{ "src": "icon-192.png", "sizes": "192x192", "type": "image/png" }],
      "description": "Sync your writing projects"
    }
  ],
  "categories": [
    "productivity",
    "education",
    "utilities",
    "business",
    "lifestyle"
  ]
}