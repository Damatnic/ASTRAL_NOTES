# Astral Notes Environment Variables
# Copy this file to .env and fill in your actual values

# Vite Environment Variables (must start with VITE_)
VITE_APP_NAME=ASTRAL NOTES - Writing Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Advanced writing and storytelling platform for authors


# AI Service API Keys
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here
VITE_GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# AI Service Configuration
VITE_AI_SERVICE_URL=https://api.openai.com/v1
VITE_AI_MODEL=gpt-3.5-turbo
VITE_AI_MAX_TOKENS=1000
VITE_AI_TEMPERATURE=0.7

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_EXPORT_FEATURES=true
VITE_ENABLE_IMPORT_FEATURES=true
VITE_ENABLE_COLLABORATION=false
VITE_ENABLE_OFFLINE_MODE=true

# Storage Configuration
VITE_LOCAL_STORAGE_PREFIX=astral_notes_
VITE_MAX_STORAGE_SIZE=50MB
VITE_AUTO_SAVE_INTERVAL=5000
VITE_BACKUP_RETENTION_DAYS=30

# Writing Platform Configuration
VITE_DEFAULT_WORD_TARGET=50000
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_PROJECT_SIZE=100MB
VITE_ENABLE_WORD_COUNT=true
VITE_ENABLE_WRITING_GOALS=true
VITE_ENABLE_PROGRESS_TRACKING=true

# Development Settings
VITE_DEV_PORT=7895
VITE_DEV_HOST=localhost

# Production Settings
VITE_PROD_URL=https://astral-notes.vercel.app
VITE_API_URL=/api

# Optional: External Services
VITE_UNSPLASH_ACCESS_KEY=your_unsplash_key_for_images
VITE_PEXELS_API_KEY=your_pexels_key_for_images