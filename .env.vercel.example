# Vercel Environment Variables Template
# Copy these to your Vercel project environment variables dashboard
# Some variables are set in vercel.json, others need to be added manually

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
# For production, use a PostgreSQL database (recommended)
# Example providers: Neon, PlanetScale, Supabase, Railway
DATABASE_URL=postgresql://username:password@host:port/database?schema=public

# For development/testing, you can use SQLite
# DATABASE_URL=file:./dev.db

# =============================================================================
# AUTHENTICATION & SECURITY (Required)
# =============================================================================
# JWT Secret for token signing - use a strong, random string
JWT_SECRET=your-super-secure-jwt-secret-key-here-at-least-32-characters

# Password hashing rounds (optional, defaults to 12)
BCRYPT_ROUNDS=12

# =============================================================================
# CORS CONFIGURATION (Required for production)
# =============================================================================
# Your frontend domain - update this to your actual Vercel deployment URL
CORS_ORIGIN=https://your-app.vercel.app

# For development, use:
# CORS_ORIGIN=http://localhost:7891

# =============================================================================
# RATE LIMITING (Optional - defaults provided)
# =============================================================================
# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CLIENT ENVIRONMENT VARIABLES (Required)
# These are automatically set in vercel.json, but can be overridden
# =============================================================================
# Application Information
VITE_APP_NAME=Astral Notes
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Personal Creative Writing Assistant

# API Configuration
VITE_API_URL=/api

# Feature Flags
VITE_ENABLE_AI_FEATURES=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false

# AI Service Configuration (if AI features enabled)
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here
VITE_GOOGLE_AI_API_KEY=your_google_ai_api_key_here
VITE_AI_SERVICE_URL=https://api.openai.com/v1
VITE_AI_MODEL=gpt-3.5-turbo
VITE_AI_MAX_TOKENS=1000
VITE_AI_TEMPERATURE=0.7

# Storage Configuration
VITE_LOCAL_STORAGE_PREFIX=astral_notes_
VITE_MAX_STORAGE_SIZE=50MB

# External Services (Optional)
VITE_UNSPLASH_ACCESS_KEY=your_unsplash_key_for_images
VITE_PEXELS_API_KEY=your_pexels_key_for_images

# =============================================================================
# RUNTIME ENVIRONMENT
# =============================================================================
NODE_ENV=production

# =============================================================================
# LOGGING (Optional)
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# =============================================================================
# FILE UPLOAD (Optional)
# =============================================================================
# Maximum file upload size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Allowed file types for uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,text/plain,application/pdf